<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />   
    <style id="font">
        <attributes font="interface/Fonts/Base.fnt" inherit="true" />     
    </style>    
    <screen id="start" controller="eduapp.gui.GuiMainMenu">
        <layer id="centerColumn" childLayout="vertical">
            <panel width="100%" height="40%" childLayout="vertical" />                  
            <control id="LevelList" name="listBox" width="40%" align="center" vertical="optional" horizontal="optional" displayItems="4" selection="Single" />
            <panel width="100%" height="10%" childLayout="vertical" /> 
            <panel id="button" height="10%" width="15%" align="center" backgroundColor="#aaaa" childLayout="center" visibleToMouse="true">
                <interact onClick="startGame()"/>
                <effect>                    
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="text" font="interface/Fonts/Base.fnt" color="#000f" text="Start game!" align="center" valign="center" />
            </panel>
        </layer>
    </screen>
    <screen id="game" controller="eduapp.gui.GuiWorld">        
        <layer id="foreground" childLayout="vertical">
            <panel height="10%" childLayout="horizontal">
                <panel width="1%" childLayout="vertical" />
                <panel id="panel1" width="10%" childLayout="center" backgroundColor="#aaaa">
                    <image id="inv1" filename="interface/face1.png" valign="center" halign="center" width="50%" height="50%"/>
                </panel>
                <panel width="1%" childLayout="vertical" />
                <panel id="panel2" width="10%" childLayout="center" backgroundColor="#aaaa">
                    <image id="inv2" filename="interface/face1.png" valign="center" halign="center" width="50%" height="50%"/>
                </panel>
                <panel width="1%" childLayout="vertical" />
                <panel id="panel3" width="10%" childLayout="center" backgroundColor="#aaaa">
                    <image id="inv3" filename="interface/face1.png" valign="center" halign="center" width="50%" height="50%"/>
                </panel>
                <panel width="1%" childLayout="vertical" />
                <panel id="panel4" width="10%" childLayout="center" backgroundColor="#aaaa">
                    <image id="inv4" filename="interface/face1.png" valign="center" halign="center" width="50%" height="50%"/>
                </panel>
                <panel width="1%" childLayout="vertical" />
                <panel id="panel5" width="10%" childLayout="center" backgroundColor="#aaaa">
                    <image id="inv5" filename="interface/face1.png" valign="center" halign="center" width="50%" height="50%"/>
                </panel>
            </panel>
            <panel height="80%" childLayout="vertical" />
            <panel id="panelWithImage" childLayout="horizontal">                  
                <panel width="45%" valign="center" />                  
                <panel id="panelImage" width="10%" childLayout="center">
                    <image filename="interface/face1.png" valign="center" align="center" width="50%" height="50%" />                    
                </panel>                
            </panel>
        </layer>   
        <layer childLayout="vertical">
            <panel height="19%" />            
            <panel id="panelText"  height="25%" align="left" childLayout="horizontal" visible="false">                                
                <panel width="57%" />
                <text id="text" width="30%" font="interface/Fonts/Base.fnt" textHAlign="left" backgroundColor="#aaaa" color="#00ff00" text="" wrap="true" padding="5px"/>                
                <effect>
                    <onCustom customKey="Show" name="fade" start="#0" end="#f" length="500" startDelay="0" inherit="true" />
                    <onCustom customKey="Hide" name="fade" start="#f" end="#0" length="500" startDelay="5000" inherit="true"/>                    
                </effect>
            </panel>
        </layer>
        <layer childLayout="horizontal">            
            <panel width="77%"/>                                                                                
            <image id="albert" filename="interface/albert.png" valign="top" halign="right" width="23%" height="20%" visible="false"/>                            
        </layer>     
    </screen>
    <screen id="pause" controller="eduapp.gui.GuiPause">        
        <layer id="centerColumn" childLayout="vertical">
            <panel width="100%" height="40%" childLayout="vertical" />                                          
            <panel id="buttonBack" height="10%" width="15%" align="center" backgroundColor="#aaaa" childLayout="center" visibleToMouse="true">
                <interact onClick="backToGame()"/>
                <effect>                                        
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="textBack" font="interface/Fonts/Base.fnt" color="#000f" text="Zpět do hry" align="center" valign="center" />
            </panel>
            <panel width="100%" height="5%" childLayout="vertical" /> 
            <panel id="buttonMenu" height="10%" width="15%" align="center" backgroundColor="#aaaa" childLayout="center" visibleToMouse="true">
                <interact onClick="backToMenu()"/>
                <effect>                                        
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="textMenu" font="interface/Fonts/Base.fnt" color="#000f" text="Zpět do menu" align="center" valign="center" />
            </panel>
            <panel width="100%" height="5%" childLayout="vertical" /> 
            <panel id="buttonExit" height="10%" width="15%" align="center" backgroundColor="#aaaa" childLayout="center" visibleToMouse="true">
                <interact onClick="exit()"/>
                <effect>                                        
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="textExit" font="interface/Fonts/Base.fnt" color="#000f" text="Ukončit hru" align="center" valign="center" />
            </panel>
        </layer>       
    </screen>
    <screen id="quest" controller="eduapp.gui.GuiQuest">        
        <layer id="centerColumn" childLayout="vertical">
            <panel width="100%" height="10%" childLayout="vertical" />            
            <panel id="panelQuest" height="80%" width="80%" align="center" backgroundColor="#aaaa" childLayout="vertical" visibleToMouse="false">                                                
            </panel>
        </layer>       
    </screen>
    <screen id="questInput" controller="eduapp.gui.GuiQuestInput">        
        <layer id="centerColumn" childLayout="vertical">
            <panel width="100%" height="70%" childLayout="vertical" />            
            <panel id="panelQuest" width="30%" height="10%"  align="center" backgroundColor="#aaaa" childLayout="vertical" visibleToMouse="true">                                
                <text id="questText" height="50%" font="interface/Fonts/Base.fnt" align="center" color="#ffffff" text=".."/>
                <control id="questInput" height="50%" name="textfield" />
                <effect>
                    <onCustom customKey="Start" name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true" />
                    <onCustom customKey="Ok" name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onCustom customKey="Wrong" name="shake" distance="5.0" global="true" />
                </effect>
            </panel>
        </layer>       
    </screen>
    <screen id="groups" controller="eduapp.gui.GuiGroups">        
        <layer id="onlyLayer" childLayout="vertical">            
            <panel width="100%" height="95%" childLayout="vertical" />            
            <panel id="panelQuest" width="100%" backgroundColor="#00000000" childLayout="horizontal" visibleToMouse="true">                                
                <panel width="45%" />                                          
                <panel id="buttonOk" align="center" width="10%" height="95%" backgroundColor="#aaaa" childLayout="center" visibleToMouse="true">
                    <interact onClick="ok()"/>
                    <effect>                                        
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                    </effect>
                    <text id="text" font="interface/Fonts/Base.fnt" color="#000f" text="Ok" align="center" valign="center" />
                </panel>
                
            </panel>
        </layer>       
    </screen>
    <screen id="conversion" controller="eduapp.gui.GuiConversion">        
        <layer id="onlyLayer" childLayout="vertical">   
            <panel height="10%"/>                                 
            <panel height="75%" width="80%" align="center" backgroundColor="#aaaa" id="panelValues" childLayout="vertical" />
            <panel height="5%"/> 
            <panel id="panelOk" width="100%" height="5%" backgroundColor="#00000000" childLayout="horizontal" visibleToMouse="true">                                
                <panel width="45%" />                                          
                <panel id="buttonOk" align="center" width="10%" height="95%" backgroundColor="#aaaa" childLayout="center" visibleToMouse="true">
                    <interact onClick="ok()"/>
                    <effect>                                        
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                    </effect>
                    <text id="text" font="interface/Fonts/Base.fnt" color="#000f" text="Ok" align="center" valign="center" />
                </panel>                
            </panel>            
        </layer>       
    </screen>
    <screen id="description" controller="eduapp.gui.GuiDescription">        
        <layer childLayout="vertical">
            <panel height="19%" />            
            <panel id="panelText"  height="25%" align="left" childLayout="horizontal">                                
                <panel width="57%" />
                <text id="text" width="30%" font="interface/Fonts/Base.fnt" textHAlign="left" backgroundColor="#aaaa" color="#00ff00" text="....." wrap="true" padding="5px"/>                
                <effect>
                    <onCustom customKey="Show" name="fade" start="#0" end="#f" length="500" startDelay="0" inherit="true" />
                    <onCustom customKey="Hide" name="fade" start="#f" end="#0" length="500" startDelay="5000" inherit="true"/>                    
                </effect>
            </panel>
        </layer>
        <layer childLayout="horizontal">            
            <panel width="77%"/>                                                                                
            <image filename="interface/albert.png" valign="top" halign="right" width="23%" height="20%"/>                            
        </layer>
    </screen>
    <controlDefinition name="line">
        <panel childLayout="horizontal" width="100%" align="center">
            <control id="#line-text" name="label" align="left" textHAlign="left" height="23px" width="*" wrap="true" style="font"/>
        </panel>
    </controlDefinition> 
    <screen id="dictionary" controller="eduapp.gui.GuiDictionary">  
        <layer id="complete" childLayout="center">      
            <panel height="95%" width="95%" align="center" backgroundColor="#aaaa" childLayout="horizontal" visibleToMouse="true">                
                <control id="tree" name="listBox" valign="center" vertical="optional" horizontal="off" width="25%" displayItems="15" style="font" inherit="true"
                         viewConverterClass="eduapp.gui.listbox.LineListBoxViewConverter">
                    <control name="line" controller="de.lessvoid.nifty.controls.listbox.ListBoxItemController" margin="2px">
                        <interact onClick="listBoxItemClicked()" />
                        <effect>
                            <onCustom customKey="focus" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
                            <onCustom customKey="select" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
                            <onCustom customKey="select" name="textColor" post="false" color="#fc0f" neverStopRendering="true" timeType="infinite" />
                            <onHover name="colorBar" color="#444f" post="false" neverStopRendering="true" timeType="infinite" inset="1px"/>
                            <onClick name="focus" targetElement="#parent#parent"/>
                        </effect>
                    </control>
                </control>                
                <panel childLayout="vertical" width="1%"/>
                <panel id="content" childLayout="vertical">
                </panel>  
            </panel> 
        </layer>
    </screen>
</nifty>
